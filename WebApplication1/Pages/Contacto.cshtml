@page
@model WebApplication1.Pages.ContactoModel
@{

ViewData["Title"] = "Contacto";
}


<div class="container mt-5">
	<h2>Contact Form</h2>
	<form method="post" class="needs-validation" novalidate>
		<div class="mb-3">
			<label asp-for="Nombre" class="form-label"></label>
			<input asp-for="Nombre" class="form-control" required />
			<span asp-validation-for="Nombre" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Email" class="form-label"></label>
			<input asp-for="Email" type="email" class="form-control" required />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Mensaje" class="form-label"></label>
<textarea asp-for="Mensaje" class="form-control" rows="5" required></textarea>
			<span asp-validation-for="Mensaje" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}