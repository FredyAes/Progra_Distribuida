<!-- Imagenes de carrusel como fondo de pantalla -->
<div id="blackcloverCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://imgsrv.crunchyroll.com/cdn-cgi/image/fit=contain,format=auto,quality=85,width=1200,height=675/catalog/crunchyroll/0273e80242d80b0218f640e038269c18.jpg" class="d-block w-100" alt="Imagen 1">
        </div>
        <div class="carousel-item">
            <img src="https://imgsrv2.voi.id/jmiQ412b2sHUhawDyNSt74Zl0hQfIBbejjT7eE4Xm2Y/auto/1200/675/sm/1/bG9jYWw6Ly8vcHVibGlzaGVycy8zMjkxMDcvMjAyMzExMTMxNjE3LW1haW4uanBn.jpg" class="d-block w-100" alt="Imagen 2">
        </div>
        <div class="carousel-item">
            <img src="https://imgix.ranker.com/list_img_v2/15156/2735156/original/best-black-clover-characters-u2?fit=crop&fm=pjpg&q=80&dpr=2&w=1200&h=720" class="d-block w-100" alt="Imagen 3">
        </div>
        <div class="carousel-item">
            <img src="https://dl.bc.cdn.garenanow.com/bcm/id/img/1200x630.png" class="d-block w-100" alt="Imagen 4">
        </div>
    </div>
</div>

<!-- Estilos CSS para el carrusel de fondo -->
<style>
    /* Hace que el carrusel ocupe toda la pantalla */
    #blackcloverCarousel {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: -1; /* Envía el carrusel al fondo y no se sobreponga */
        overflow: hidden;
    }

    /* Ajustar las imágenes al fondo */
    .carousel-item img {
        object-fit: cover;
        width: 100%;
        height: 100vh; /* Altura de toda la pantalla */
    }
</style>