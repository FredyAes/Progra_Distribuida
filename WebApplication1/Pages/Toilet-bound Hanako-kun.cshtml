    <!-- Octava columna -->
    <div class="col-md-3 mb-4">
        <div class="text-center p-3 border rounded TH-custom-card">
            <a href="https://hanako-kun.fandom.com/wiki/Akane_Aoi" target="_blank" class="TH-custom-link">
                <h3>AKANE AOI</h3>
            </a>
            <p><em><strong>"¡Muy bien! No soy precisamente fan de las historias de miedo, pero te contaré todas las que quieras, Nene-chan, ¡si eso te ayuda a sentirte mejor!"</strong></em></p>
            <img src="https://i.pinimg.com/564x/6e/c9/d6/6ec9d6b715446fb24fd82cd0451eac90.jpg" alt="Imagen representativa 8" class="img-fluid TH-custom-img mt-2">
        </div>
    </div>
</div>

<!-- Imagenes de carrusel como fondo de pantalla -->
<div id="HanakoCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://mrwallpaper.com/images/high/vivid-hanako-kun-desktop-digital-art-09jvbgaslvdd9qty.jpg" class="d-block w-100" alt="Imagen 1">
        </div>
        <div class="carousel-item">
            <img src="https://images2.alphacoders.com/106/1060750.jpg" class="d-block w-100" alt="Imagen 2">
        </div>
        <div class="carousel-item">
            <img src="https://wallpapers.com/images/hd/toilet-bound-hanako-kun-3fsc02g3qjdwrtha.jpg" class="d-block w-100" alt="Imagen 3">
        </div>
        <div class="carousel-item">
            <img src="https://rukminim2.flixcart.com/image/850/1000/l432ikw0/poster/e/m/6/medium-toilet-bound-hanako-kun-jibaku-shounen-hanako-kun-matte-original-imagf23frezjmhry.jpeg?q=20&crop=false" class="d-block w-100" alt="Imagen 4">
        </div>
    </div>
</div>

<!-- Estilos CSS para el carrusel de fondo -->
<style>
    /* Hace que el carrusel ocupe toda la pantalla */
    #HanakoCarousel {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: -1; /* Envía el carrusel al fondo y no se sobreponga */
        overflow: hidden;
    }

    /* Ajustar las imágenes al fondo */
    .carousel-item img {
        object-fit: cover;
        width: 100%;
        height: 100vh; /* Altura de toda la pantalla */
    }
</style>